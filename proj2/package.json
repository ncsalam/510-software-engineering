{
  "name": "src",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:cov": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "start": "node src/server.mjs"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,ts,tsx,mjs,cjs}",
      "!<rootDir>/src/.venv/**",
      "!**/*.d.ts"
    ],
    "coverageReporters": [
      "text",
      "html",
      "lcov",
      "json-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-validator": "^7.3.0",
    "ollama": "^0.6.0"
  }
}
