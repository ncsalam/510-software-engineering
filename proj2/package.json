{
    "type": "module",
    "name": "src",
    "version": "1.0.0",
    "scripts": {
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "test:cov": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
        "start": "node src/server.mjs",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --check .",
        "format:fix": "prettier --write ."
    },
    "devDependencies": {
        "@eslint/js": "^9.38.0",
        "eslint": "^9.38.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^16.4.0",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "jsdom": "^27.0.0",
        "prettier": "^3.6.2"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "collectCoverage": true,
        "collectCoverageFrom": [
            "<rootDir>/src/**/*.{js,ts,tsx,mjs,cjs}",
            "!<rootDir>/src/.venv/**",
            "!**/*.d.ts"
        ],
        "coverageReporters": [
            "text",
            "html",
            "lcov"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 0,
                "functions": 0,
                "lines": 0,
                "statements": 0
            }
        }
    },
    "dependencies": {
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "express-validator": "^7.3.0",
        "ollama": "^0.6.0"
    }
}
